ALLDIRS = ConEmu \
          ConEmuC \
          ConEmuPlugin
# ConEmuD


all: preclean $(ALLDIRS) clean

FICTIVE=_fictive_
$(FICTIVE):

$(ALLDIRS): $(FICTIVE)
	@echo ===========$@
	@$(MAKE) -C $@ -f makefile_gcc

.PHONY: preclean
preclean:
	@echo prebuild cleaning
	@rm -f ../ConEmu.exe ../ConEmuC.exe ../plugins/ConEmu/ConEmu.dll ../gcc/common/*.* ../gcc/conemu/*.* ../gcc/conemuc/*.*  ../gcc/ConEmuPlugin/*.* ../gcc/Plugin/*.* ../gcc/*.*

.PHONY: clean
clean:
	@echo final cleaning
	@rm -f ../gcc/common/*.* ../gcc/conemu/*.* ../gcc/conemuc/*.*  ../gcc/ConEmuPlugin/*.* ../gcc/Plugin/*.* ../gcc/*.*
	@rmdir ../gcc/common ../gcc/conemu ../gcc/conemuc ../gcc/ConEmuPlugin ../gcc/Plugin ../gcc
